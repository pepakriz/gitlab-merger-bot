{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "ES2022",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"lib": ["ES2023"],
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*", "../schema.graphql"]
}
