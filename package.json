{
	"name": "gitlab-merger-bot",
	"description": "GitLab FF merger bot",
	"license": "MIT",
	"scripts": {
		"postinstall": "yarn run generate",
		"dev": "nodemon --watch 'src/**/*.*' --exec babel-node --extensions '.ts' src/index.ts",
		"start": "node lib",
		"generate": "graphql-codegen",
		"build": "babel src --out-dir lib --extensions '.ts'",
		"build-docker-image": "docker build -t pepakriz/gitlab-merger-bot:latest .",
		"build-bin": "pkg -t node10-alpine-x64 lib/index.js --output ./gitlab-merger-bot",
		"check": "yarn run check:cs && yarn run check:types && yarn run check:tests",
		"check:cs": "prettier --check \"**/*.{js,json,ts,tsx}\"",
		"check:types": "tsc --noEmit",
		"check:tests": "jest",
		"format": "prettier --write \"**/*.{js,json,ts,tsx}\""
	},
	"dependencies": {
		"@sentry/node": "^5.13.2",
		"apollo-server": "^2.11.0",
		"apollo-server-express": "^2.11.0",
		"body-parser": "^1.19.0",
		"env-var": "^6.0.4",
		"express": "^4.17.1",
		"fast-deep-equal": "^3.1.1",
		"graphql-import": "^1.0.1",
		"node-fetch": "^2.3.0",
		"serve-static": "^1.14.1",
		"uuid": "^7.0.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.7",
		"@babel/node": "^7.8.7",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/plugin-proposal-object-rest-spread": "^7.8.3",
		"@babel/preset-env": "^7.8.7",
		"@babel/preset-typescript": "^7.8.3",
		"@graphql-codegen/cli": "^1.13.2",
		"@graphql-codegen/core": "^1.13.2",
		"@graphql-codegen/typescript": "^1.13.2",
		"@graphql-codegen/typescript-resolvers": "^1.13.2",
		"@types/body-parser": "^1.19.0",
		"@types/express": "^4.17.4",
		"@types/jest": "^25.1.3",
		"@types/node": "^13.7.7",
		"@types/node-fetch": "^2.5.5",
		"@types/uuid": "^7.0.2",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"nodemon": "^2.0.2",
		"pkg": "^4.4.4",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"ts-jest": "^25.2.1",
		"ts-node": "^8.6.2",
		"typescript": "^3.8.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/src/**/__tests__/*.+(ts|tsx|js)"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged --pattern \"**/*.*(js|json|ts|tsx)\""
		}
	}
}
